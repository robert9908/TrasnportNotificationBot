{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "System.Net.Http.HttpClient": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST:-localhost};Port=${DB_PORT:-5432};Database=${DB_NAME:-transport_bot};Username=${DB_USER:-postgres};Password=${POSTGRES_PASSWORD}",
    "Redis": "${REDIS_HOST:-localhost}:${REDIS_PORT:-6379}"
  },
  "TelegramBot": {
    "Token": "${TELEGRAM_BOT_TOKEN}",
    "WebhookUrl": "${TELEGRAM_WEBHOOK_URL}"
  },
  "MoscowTransport": {
    "ApiKey": "${MOSCOW_TRANSPORT_API_KEY}",
    "BaseUrl": "https://api.transport.moscow/"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/logs/transport-bot-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"]
  }
}
